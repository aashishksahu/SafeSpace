<resources>
    <!-- Base application theme. -->
    <style name="Theme.SafeSpace" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_500</item>
        <item name="colorOnPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="iconTint">@color/secondary_500</item>
        <item name="cardBackgroundColor">@color/card_background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_700</item>
        <item name="colorOnSecondary">@color/secondary_700</item>
        <item name="backgroundColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:itemBackground">@color/card_background_light</item>
    </style>
</resources>