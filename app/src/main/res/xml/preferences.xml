    <SwitchPreferenceCompat
        app:icon="@drawable/fingerprint_black_48dp"
        app:key="USE_BIOMETRIC"
        app:title="@string/biometric_title" />

    <Preference
        app:icon="@drawable/key_black_36dp"
        app:key="change_pin"
        app:title="@string/change_pin" />

    <Preference
        app:icon="@drawable/palette_black_36dp"
        app:key="change_theme"
